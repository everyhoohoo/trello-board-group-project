extends layout

block content
    br
    div
        .background-wallpaper
            .container-fluid
                .row
                    .col-sm-8
                        p.home-heading AGILE SHARK BOARD
                        p.statement Organize your life
                    .col-sm-4
                        .login
                        if loggedIn
                            h4 You are logged in!
                        else
                            h4 You are not logged in! Please #[a(href="/login") Log In] to continue.
                .row
                    .col-sm-8
                        a.button#btn-home-view.btn.btn-primary(href='/') Home
                            if loggedIn
                                a( id="qsProfileBtn" href='/user').btn.btn-primary Profile
                                a( id="qsLogoutBtn" href="/logout").btn.btn-primary Logout
                            else
                                a( id="qsLoginBtn" href="/login" ).btn.btn-primary Login
                    .col-sm-4
        .w3-card-4.w3-center(style="padding: 15px;")
            input(class='createSwimlane' type='button', value='Add Swimlane', click='')
        .container
